# Zenith Coder Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI API KEYS
# =============================================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Claude API Key (for Anthropic models)
CLAUDE_API_KEY=sk-ant-api03-your_claude_key_here

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_key_here

# OpenRouter API Key (for accessing multiple models)
OPENROUTER_API_KEY=sk-or-your_openrouter_key_here

# Hugging Face API Token (optional, for hosted models)
HUGGINGFACE_API_TOKEN=hf_your_huggingface_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_DB=zenith_coder
POSTGRES_USER=zenith_user
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Cache URL
REDIS_URL=redis://redis:6379

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Personal Access Token (for repository management)
GITHUB_TOKEN=ghp_your_github_token_here

# DuckDNS Configuration (for dynamic DNS)
DUCKDNS_TOKEN=your_duckdns_token_here
DUCKDNS_DOMAIN=your_domain_name

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Secret key for JWT tokens and encryption
SECRET_KEY=your_super_secret_key_here_change_this_in_production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=true

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Domain for production deployment
DOMAIN=your_domain.com

# Email for Let's Encrypt certificates
ACME_EMAIL=your_email@example.com

# =============================================================================
# AI MODEL PREFERENCES
# =============================================================================

# Default model for code generation
DEFAULT_CODE_MODEL=claude-3-5-sonnet-20241022

# Default model for analysis and reasoning
DEFAULT_ANALYSIS_MODEL=gpt-4o

# Default model for documentation generation
DEFAULT_DOCS_MODEL=claude-3-5-sonnet-20241022

# Enable local Hugging Face models (true/false)
ENABLE_LOCAL_MODELS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable telemetry and analytics
ENABLE_TELEMETRY=true

# Enable automatic documentation updates
ENABLE_AUTO_DOCS=true

# Enable freelance finder
ENABLE_FREELANCE_FINDER=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum concurrent AI requests
MAX_CONCURRENT_AI_REQUESTS=5

# Request timeout in seconds
AI_REQUEST_TIMEOUT=60

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Enable API key authentication
ENABLE_API_KEY_AUTH=false

# API key for external access (if enabled)
API_KEY=your_api_key_here

